enum PaymentStatus {
  PENDING
  ON_HOLD        // En attente de confirmation d'arrivée du conducteur
  COMPLETED
  FAILED
  REFUNDED
}

enum SubscriptionPlan {
  STARTER
  BUSINESS
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
}

enum UserType {
  CUSTOMER
  DRIVER
  ADMIN
}

